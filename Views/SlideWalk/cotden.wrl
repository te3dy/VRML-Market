DEF ma Script {

    eventIn SFBool turnOn

    eventOut SFBool On

    eventOut SFBool Off

    field SFBool turn FALSE

    url "javascript:

    function turnOn(val){

        if(val){

            turn = !turn;

            if(turn)

            {

                On= TRUE;

                Off=FALSE;

            }

            else

            {

                On=FALSE;

                Off=TRUE;

            }

        }

    }

    "

}
